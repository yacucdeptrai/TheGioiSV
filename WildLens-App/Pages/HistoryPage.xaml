<?xml version="1.0" encoding="utf-8" ?>
<ContentPage
    x:Class="WildLensApp.Pages.HistoryPage"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:viewmodels="clr-namespace:WildLensApp.ViewModels"
    Title="History">

    <Grid RowDefinitions="Auto,*" Padding="12">
        <Button Text="Refresh" Clicked="OnRefreshClicked"/>
        <CollectionView Grid.Row="1" ItemsSource="{Binding Items}">
            <CollectionView.ItemTemplate>
                <DataTemplate>
                    <Grid ColumnDefinitions="Auto,*,Auto" Padding="8">
                        <Label Text="{Binding Label}" FontAttributes="Bold"/>
                        <Label Grid.Column="1" Text="{Binding Confidence, StringFormat='{}{0:P0}'}"/>
                        <Label Grid.Column="2" Text="{Binding Timestamp, StringFormat='{}{0:yyyy-MM-dd HH:mm}'}" HorizontalTextAlignment="End"/>
                    </Grid>
                </DataTemplate>
            </CollectionView.ItemTemplate>
        </CollectionView>
    </Grid>
</ContentPage>